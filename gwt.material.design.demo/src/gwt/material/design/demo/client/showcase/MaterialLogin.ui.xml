<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	
	<ui:with field='res' type='gwt.material.design.demo.client.resources.MaterialResources' />
	
	<ui:style>
	
	</ui:style>
	<m:MaterialRow>
		
		<m:MaterialColumn grid="s12 m12 l4" offset="l4" >
				<m:MaterialTitle title="Login" description="Please provide your account credentials."/>
				<m:MaterialPanel padding="5" shadow="1">
					<m:MaterialTextBox placeholder="Email"/>
					<m:MaterialTextBox placeholder="Password" />
					<m:MaterialCheckBox text="Keep me logged in"/>
					<m:MaterialButton ui:field="btnLogin" color="blue" waves="light" text="Log In" width="100%"/>
				</m:MaterialPanel >
		</m:MaterialColumn>
		
	</m:MaterialRow>
</ui:UiBinder> 